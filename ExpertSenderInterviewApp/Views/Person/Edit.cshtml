@model Domain.ViewModels.Person.EditPersonViewModel
<div class="row">
	<h2>Edit Person</h2>
</div>
<form method="post">
	<div class="row">
		<label class="form-label">@Html.DisplayNameFor(m => m.FirstName)</label>
		<input type="text" class="form-control" asp-for="FirstName" />
		<span asp-validation-for="FirstName" class="text-danger"></span>
	</div>

	<div class="row">
		<label class="form-label">@Html.DisplayNameFor(m => m.LastName)</label>
		<input type="text" class="form-control" asp-for="LastName" />
		<span asp-validation-for="LastName" class="text-danger"></span>
	</div>

	<div class="row">
		<label class="form-label">@Html.DisplayNameFor(m => m.Email)</label>
		<input type="text" class="form-control" asp-for="Email" />
		<span asp-validation-for="Email" class="text-danger"></span>
	</div>

	<div class="row">
		<label class="form-label">@Html.DisplayNameFor(m => m.Description)</label>
		<input type="text" class="form-control" asp-for="Description" />
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<br />
	<div class="row">
		<button type="submit" class="btn btn-primary">Save</button>
	</div>
</form>